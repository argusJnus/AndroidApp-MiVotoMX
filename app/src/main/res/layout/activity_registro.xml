<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorOnBackground"
        tools:context=".registro">

        <ImageView
            android:id="@+id/top"
            android:layout_width="0dp"
            android:layout_height="68dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rectangulo" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="24dp" />

        <TextView
            android:id="@+id/lblTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pop_bold"
            android:text="Registro"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/top"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.008" />

        <EditText
            android:id="@+id/txtFecha"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="170dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="13dp"
            android:background="?attr/colorContainer"
            android:editable="false"
            android:ems="10"
            android:focusable="auto"
            android:fontFamily="@font/pop"
            android:hint="Fec. de Nacimiento"

            android:hyphenationFrequency="normal"
            android:inputType=""
            android:textColor="?attr/colorTertiary"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top" />

        <EditText
            android:id="@+id/txtCurp"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="13dp"
            android:background="?attr/colorContainer"
            android:ems="10"
            android:fontFamily="@font/pop"
            android:hint="CURP"
            android:hyphenationFrequency="normal"
            android:inputType="textCapCharacters"
            android:maxLength="18"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="?attr/colorTertiary"
            android:textSize="16dp"
            app:layout_constraintEnd_toStartOf="@id/txtFecha"
            app:layout_constraintHorizontal_bias="0.103"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/top" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="144dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPass"
            app:srcCompat="@drawable/inereverso" />

        <EditText
            android:id="@+id/txtPass"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="13dp"
            android:layout_marginTop="36dp"
            android:background="?attr/colorContainer"
            android:ems="10"
            android:fontFamily="@font/pop"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCorreo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pop"
            android:text="Ingrese los dígitos resaltados en rosa en la imagen que se encuentran al reverso de su credencial."
            android:textAlignment="center"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />

        <EditText
            android:id="@+id/txtIne"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="13dp"
            android:background="?attr/colorContainer"
            android:ems="10"
            android:fontFamily="@font/pop"
            android:hint="INE"
            android:inputType="number"
            android:maxLength="13"
            android:textAlignment="center"
            android:textColor="?attr/colorTertiary"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_marginTop="88dp"
            android:backgroundTint="?attr/colorPrimary"
            android:fontFamily="@font/pop"
            android:onClick="registrar"
            android:text="Enviar"
            android:textColor="@color/white"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/txtCorreo"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="13dp"
            android:layout_marginTop="20dp"
            android:background="?attr/colorContainer"
            android:ems="10"
            android:fontFamily="@font/pop"
            android:hint="Correo"
            android:inputType="textEmailAddress"
            android:textColor="?attr/colorTertiary"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aTxtMun" />

        <ProgressBar
            android:id="@+id/progressBarRegistro"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="34dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/btnEnviar" />

        <Spinner
            android:id="@+id/spnEst"
            style="@style/CustomSpinnerStyle"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="13dp"
            android:fontFamily="@font/pop"
            android:spinnerMode="dialog"
            android:textColor="?attr/colorTertiary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/txtCurp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/pop"
            android:text="Estado: "
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="@+id/guideline3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/pop"
            android:text="Municipio: "
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="398dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="-12dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="0dp" />

        <AutoCompleteTextView
            android:id="@+id/aTxtMun"
            style="@style/CustomAuto"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="13dp"
            android:fontFamily="@font/pop"
            android:textColor="?attr/colorTertiary"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/spnEst" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
